@model GeoWorldHotelSearch.Models.Hotel
@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Hotels" asp-action="Index">Hotels</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>
    
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-3">@Model.Name</h1>
            <p class="text-muted">
                <i class="bi bi-geo-alt"></i> @Model.Location, @Model.City, @Model.Country
            </p>
            
            <div class="mb-3">
                @for (int i = 0; i < Model.Stars; i++)
                {
                    <i class="bi bi-star-fill text-warning"></i>
                }
                <span class="ms-2 badge bg-primary">@Model.Rating.ToString("0.0")/5 Guest Rating</span>
            </div>
        </div>
        <div class="col-md-4 text-md-end">
            <div class="d-flex justify-content-md-end gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                    <i class="bi bi-trash"></i> Delete
                </a>
            </div>
        </div>
    </div>
    
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/hotel-placeholder.jpg" : Model.ImageUrl)" 
                     class="card-img-top" alt="@Model.Name" style="height: 400px; object-fit: cover;">
                <div class="card-body">
                    <h4 class="card-title">About this hotel</h4>
                    <p class="card-text">@Model.Description</p>
                </div>
            </div>
            
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="card-title">Amenities</h4>
                    <div class="row">
                        @foreach (var amenity in Model.Amenities)
                        {
                            <div class="col-md-4 mb-2">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    <span>@amenity</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h4 class="card-title">Location</h4>
                    <div id="map" style="height: 400px; width: 100%;"></div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm mb-4 sticky-top" style="top: 20px;">
                <div class="card-body">
                    <h4 class="card-title">Price Details</h4>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span>Price per night</span>
                        <span class="fs-3 fw-bold text-primary">$@Model.PricePerNight.ToString("0.00")</span>
                    </div>
                    
                    <hr>
                    
                    <div class="mb-3">
                        <label for="checkIn" class="form-label">Check-in</label>
                        <input type="date" class="form-control" id="checkIn" min="@DateTime.UtcNow.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="mb-3">
                        <label for="checkOut" class="form-label">Check-out</label>
                        <input type="date" class="form-control" id="checkOut" min="@DateTime.UtcNow.AddDays(1).ToString("yyyy-MM-dd")">
                    </div>
                    <div class="mb-3">
                        <label for="guests" class="form-label">Guests</label>
                        <select class="form-select" id="guests">
                            <option value="1">1 guest</option>
                            <option value="2" selected>2 guests</option>
                            <option value="3">3 guests</option>
                            <option value="4">4 guests</option>
                            <option value="5">5 guests</option>
                        </select>
                    </div>
                    
                    <div class="d-grid gap-2 mt-4">
                        <button class="btn btn-primary btn-lg" type="button" disabled>
                            Book Now
                        </button>
                        <small class="text-muted text-center">Booking functionality not implemented in this demo</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap" async defer></script>
    <script>
        function initMap() {
            const hotelLocation = { lat: @Model.Latitude, lng: @Model.Longitude };
            const map = new google.maps.Map(document.getElementById("map"), {
                zoom: 15,
                center: hotelLocation,
            });
            const marker = new google.maps.Marker({
                position: hotelLocation,
                map: map,
                title: "@Model.Name"
            });
        }
    </script>
}
